{
  "name": "xplorer",
  "version": "12.2.0",
  "description": "Files Managing tool",
  "author": {
    "name": "areg-77",
    "email": "aregak10@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/areg-77/xplorer.git"
  },
  "main": "main.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5705 && electron .\"",
    "host": "concurrently -k \"vite --host\" \"wait-on http://localhost:5705 && electron .\"",
    "launch": "vite build && cross-env NODE_ENV=production electron .",
    "build": "cross-env NODE_ENV=production rimraf bin && vite build && electron-builder",
    "build:native": "cd native && npx node-gyp configure build && cd .."
  },
  "build": {
    "appId": "com.areg77.xplorer",
    "productName": "Xplorer",
    "executableName": "xplorer",
    "artifactName": "${name}-${os}-${arch}-v${version}.${ext}",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      {
        "from": "native/build/Release/",
        "to": "native",
        "filter": [
          "watcher.node"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "LICENSE",
        "to": "../LICENSE.${name}.txt"
      }
    ],
    "directories": {
      "output": "bin"
    },
    "compression": "normal",
    "win": {
      "target": "zip",
      "icon": "dist/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "dist/icons",
      "category": "Utility"
    }
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8",
    "mime-types": "^3.0.1",
    "node-addon-api": "^8.5.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "rimraf": "^6.0.1",
    "vite": "^7.1.9",
    "wait-on": "^9.0.1"
  }
}
