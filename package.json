{
  "name": "xplorer",
  "version": "3.0.0",
  "private": true,
  "description": "Files Managing tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/areg-77/xplorer.git"
  },
  "license": "MIT",
  "author": "areg-77",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5705 && electron .\"",
    "server": "concurrently -k \"vite --host\" \"wait-on http://localhost:5705 && electron .\"",
    "launch": "vite build && cross-env NODE_ENV=production electron .",
    "dist": "cross-env NODE_ENV=production rimraf bin && vite build && electron-builder"
  },
  "build": {
    "appId": "com.areg77.xplorer",
    "productName": "Xplorer",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "LICENSE",
        "to": "../LICENSE.xplorer.txt"
      }
    ],
    "directories": { "output": "bin" },
    "compression": "normal",
    "win": {
      "target": "dir",
      "icon": "dist/icons/icon.ico"
    }
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8",
    "mime-types": "^3.0.1",
    "vue": "^3.5.20"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "rimraf": "^6.0.1",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  }
}
