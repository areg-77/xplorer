{
  "name": "xplorer",
  "version": "20.10.1",
  "description": "Files Managing tool",
  "author": {
    "name": "areg-77",
    "email": "aregak10@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/areg-77/xplorer.git"
  },
  "main": "main.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5705 && electron .\"",
    "host": "concurrently -k \"vite --host\" \"wait-on http://localhost:5705 && electron .\"",
    "launch": "vite build && cross-env NODE_ENV=production electron .",
    "build": "cross-env NODE_ENV=production rimraf bin && vite build && electron-builder",
    "build:native": "cd native && rimraf build node_modules && npx node-gyp configure build && cd ..",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.areg77.xplorer",
    "productName": "Xplorer",
    "executableName": "xplorer",
    "artifactName": "${name}-${os}-${arch}-v${version}.${ext}",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "LICENSE",
        "to": "../LICENSE.${name}.txt"
      },
      {
        "from": "native/build/Release/",
        "to": "native",
        "filter": [
          "watcher.node",
          "efsw.dll"
        ]
      }
    ],
    "directories": {
      "output": "bin"
    },
    "compression": "normal",
    "win": {
      "target": "zip",
      "icon": "dist/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "dist/icons",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "areg-77",
        "repo": "xplorer",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@vueuse/core": "^14.0.0",
    "color": "^5.0.3",
    "custom-electron-titlebar": "^4.2.8",
    "mime-types": "^3.0.1",
    "mitt": "^3.0.1",
    "node-addon-api": "^8.5.0",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "rimraf": "^6.1.2",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  }
}
